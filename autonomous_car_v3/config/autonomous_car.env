# Configurações de hardware
MOTOR_FORWARD_LEFT_PIN=26
MOTOR_BACKWARD_LEFT_PIN=20
MOTOR_FORWARD_RIGHT_PIN=19
MOTOR_BACKWARD_RIGHT_PIN=16
MOTOR_LEFT_INVERTED=false
MOTOR_RIGHT_INVERTED=true
# Tempo máximo (ms) sem novos comandos de movimento antes de parar automaticamente
MOTOR_COMMAND_TIMEOUT_MS=150
STEERING_PWM_PIN=13

# Sensibilidade de controle
STEERING_SENSITIVITY=1.0

# Modo de condução (manual/autonomous)
DRIVING_MODE=manual

# Limites de direção
STEERING_CENTER_ANGLE=90
STEERING_LEFT_LIMIT_DEGREES=80
STEERING_RIGHT_LIMIT_DEGREES=80

# PID da direção (obsoleto – mantido apenas como referência para futuras integrações)
# STEERING_PID_KP=20.0
# STEERING_PID_KI=0.15
# STEERING_PID_KD=0.10
# STEERING_PID_OUTPUT_LIMIT=0.10
# STEERING_PID_INTERVAL_MS=30

# Incremento de comando de direção
STEERING_COMMAND_STEP=0.2

# Visão – filtros do detector de pista (LaneDetector)
# Percentual inferior do frame analisado (0 a 1). Diminuir recorta o horizonte.
LANE_ROI_KEEP_RATIO=0.5
# Kernel do blur gaussiano (precisa ser ímpar). Aumentar suaviza ruídos mas borra detalhes.
LANE_GAUSSIAN_KERNEL=5
# Sigma aplicado pelo blur gaussiano. Valores acima de 1 deixam a máscara mais homogênea.
LANE_GAUSSIAN_SIGMA=1.2
# Limite HSV mínimo usado para destacar o EVA preto.
LANE_HSV_LOW=0,0,0
# Limite HSV máximo que ainda será considerado pista. Ajuste conforme a iluminação.
LANE_HSV_HIGH=180,110,200
# Kernel usado na morfologia (close). Números maiores preenchem falhas grandes.
LANE_MORPH_KERNEL=5
# Número de iterações da morfologia. Aumente para unir regiões próximas.
LANE_MORPH_ITERATIONS=1
# Área mínima (px²) para aceitar um contorno como pista e ignorar ruídos pequenos.
LANE_MIN_CONTOUR_AREA=400
